  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Splendid Dev",
      "program": "${workspaceFolder}/node_modules/splendid/build/bin/splendid.js",
      "args": [
        "-s",
        "-e", "dev"
      ],
      "env": {
        "NODE_DEBUG": "aqt"
      },
      "sourceMaps": false,
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Splendid Prod",
      "program": "${workspaceFolder}/node_modules/splendid/build/bin/splendid.js",
      "args": [
        "-s",
      ],
      "env": {
        "NODE_DEBUG": "aqt"
      },
      "sourceMaps": false,
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "console": "integratedTerminal"
    }
  ]
}
